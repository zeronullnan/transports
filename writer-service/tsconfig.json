{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2018",
        "module": "commonjs",
        "lib": [],
        "sourceMap": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "keyofStringsOnly": false,
        "removeComments": true,
        "newLine": "lf"
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts"]
}
